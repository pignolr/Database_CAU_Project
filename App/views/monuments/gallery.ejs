<!DOCTYPE html>

<html>
    <head>
        <title>Gallery</title>
        <link type="text/css" rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <%- include ../partials/navbar.ejs %>

        <h1 style="text-align:center;text-transform:capitalize;">Gallery</h1>

        <% if (monuments === undefined || monuments.length === 0) { %>
            <a class="center">No result</a>
        <% } else { %>
            <table style="margin:0 auto;" width="90%">
                <thead>
                    <tr>
                        <th width="10%">Picture</th>
                        <th width="60%">Description</th>
                        <th width="20%">Address</th>
                        <th width="10%">Prices</th>
                    </tr>
                </thead>
                <tbody>
                    <% monuments.forEach(monument => { %>
                        <tr>
                            <td>
                                <a href="<%= monument.profil %>">
                                    <img src="<%= monument.picture %>" width="100%" height="auto"/>
                                </a>
                            </td>
                            <td>
                                <a href="<%= monument.profil %>">
                                    <h2 style="margin-top:0;" href="<%= monument.profil %>"><%= monument.name %></h2>
                                    <%= monument.description %>
                                </a>
                            </td>
                            <td>
                                <a href="<%= monument.profil %>">
                                    <h2 style="margin-top:0;" href="<%= monument.profil %>"><%= monument.city %></h2>
                                    <%= monument.address %>
                                </a>
                            </td>
                            <td>
                                <a href="<%= monument.profil %>"><%= monument.prices %></a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <% if (maxPage !== undefined && maxPage > 1) { %>
                <div class="center">
                    <div class="pagination" >
                        <% if (currentPage > 1) { %>
                            <a href="<%= newPageUrl + (+currentPage - 1) %>">&laquo;</a>
                        <% } %>
                        <% for (let page = 1; page <= maxPage; page++) { %>
                            <a href="<%= newPageUrl + page %>" <% if (page == currentPage) { %>class="active"<% } %>><%=page%></a>
                        <% } %>
                        <% if (currentPage < maxPage) { %>
                            <a href="<%= newPageUrl + (+currentPage + 1) %>">&raquo;</a>
                        <% } %>
                    </div>
                </div>
            <% } %>
        <% } %>
    </body>
</html>
